<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="612.0"
            prefWidth="400.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pie.ui.MainWindow">
    <children>
        <HBox styleClass="inputBox" layoutY="558.0" prefHeight="57.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="10.0">

            <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="39.0"
                       prefWidth="274.0" promptText="Type here...">
                <!-- Ask ChatGPT how to make the TextField responsive -->
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </TextField>

            <Button mnemonicParsing="false" onAction="#handleUserInput" prefHeight="41.0" prefWidth="41.0">
                <graphic>
                    <ImageView fitHeight="23" fitWidth="23">
                        <image>
                            <Image url="@../images/sendIcon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" prefHeight="555.0"
                    prefWidth="400.0" vvalue="1.0" AnchorPane.bottomAnchor="58.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer" prefHeight="552.0" prefWidth="388.0"/>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
